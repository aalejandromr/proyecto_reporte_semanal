      <h2><%= pluralize(reporte_semanal_celula.errors.count, "error") %> prohibited this reporte_semanal_celula from being saved:</h2>

      <ul>
        <% reporte_semanal_celula.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label :lider, :class => "block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= form.text_field :lider, :class => "appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3" %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= form.label :anfitrion, :class => "block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= form.text_field :anfitrion, :class => "appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4" %>
    </div>
  </div>

<div class="-mx-3 md:flex mb-6">

  <div class="md:w-1/2 px-3 mb-6 md:mb-0">
    <%= form.label :celula_id, :class => "block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
    <%= form.collection_select :celula_id, Celula.all, :id, :name_with_sector, {prompt: true}, {class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline"} %>
  </div>

  <div class="md:w-1/2 px-3">
    <%= form.label :reunion_evaluacion, :class => "block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
