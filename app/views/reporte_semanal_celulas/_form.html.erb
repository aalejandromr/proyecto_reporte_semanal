<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2">
<%= form_with(model: reporte_semanal_celula, local: true) do |form| %>
  <% if reporte_semanal_celula.errors.any? %>
